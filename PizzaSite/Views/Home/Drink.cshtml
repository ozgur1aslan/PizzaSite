@{
}

@model IEnumerable<DrinksModel>

<div class="text-center">
    <div class="mainText">
        <div class="mainText">
            <h1 class="display-4 text-capitalize text-black">
                Our great selection of drinks
            </h1>
            <p class="smallText"><i>Only one drink per order</i></p>
        </div>
    </div>

    <div class="container">
        <div class="row">
            



            @foreach (var drink in Model)
            {
                var imagePath = "~/images/Drinks/" + (drink.ImageTitle + ".jpg");

                <div class="col-4 mb-5">
                    <a class="pizza-img" asp-area="" asp-controller="Checkout" asp-action="DrinkCheckout"
                   asp-route-ImageTitle="@drink.ImageTitle"
                   asp-route-DrinkPrice="@drink.FinalPrice"
                   asp-route-DrinkName="@drink.DrinkName"
                   asp-route-id="@drink.Id">
                        <img src="@imagePath" class="w-100" asp-append-version="true" />
                    </a>
                    <br />

                </div>
            }



        </div>
    </div>
</div>