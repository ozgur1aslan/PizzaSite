@model DrinksModel

<h1>Your Order</h1>



@{
    var imagePath = "~/images/Drinks/" + (@Model.ImageTitle + ".jpg");
}

<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src=@imagePath class="w-100" asp-append-version="true" />
        <p>Your order for drink named @Model.DrinkName is ready!</p>
        <p>Total price is: @Model.FinalPrice</p>
        <br />
        @*<a class="btn alert-primary mt-1 mx-auto purpleButton whiteText" asp-area="" asp-controller="Checkout" asp-action="ThankYou">Confirm Order</a>*@


        <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 alert-light col-4">

            @*<div asp-validation-summary="All"></div>*@

            @*<input asp-for="Id" hidden />

            <input type="text" asp-for="DrinkName" disabled
                   placeholder="Name your pizza" />
            <br />*@





            <input asp-for="Id" hidden />

            <input type="text" asp-for="DrinkName" hidden />
            <input type="int" asp-for="FinalPrice" hidden />
            <br />


            <button class="btn btn-danger alert-primary mt-1 purpleButton whiteText" type="submit">Order</button>

        </form>


    </div>
</div>
