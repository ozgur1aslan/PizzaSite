@{
}


@model IEnumerable<DrinksOrderModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="purpleText">Your Drink Orders</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="Index" class="btn btn-primary purpleButton">
                <i class="bi bi-plus-circle"></i> &nbsp; Back to the Menu
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Date and Time
                </th>
                <th>
                    Drink Name
                </th>
                <th>
                    Price
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Date
                    </td>
                    <td width="50%">
                        @obj.DrinksModelDrinkName
                    </td>
                    <td width="30%">
                        @obj.DrinksModelFinalPrice
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>