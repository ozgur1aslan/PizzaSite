<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="purpleText">Pizza List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Admin" asp-action="CreatePizza" class="btn btn-primary" style="float: none; background-color: mediumpurple">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Pizza
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th class="purpleText">
                    Pizza Name
                </th>
                <th class="purpleText">
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.PizzaName
                    </td>
                    <td width="30%">
                        @obj.FinalPrice
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Admin" asp-action="EditPizza" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2" style="float: none; background-color: mediumpurple"> <i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Admin" asp-action="DeletePizza" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2" style="float: none; background-color: mediumpurple"> <i class="bi bi-pencil-square"></i>Delete</a>
                            @*<a asp-controller="Admin" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>*@
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>